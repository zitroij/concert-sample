{
  "bomFormat": "ConcertDef",
  "specVersion": "1.0",
  "serialNumber": "${CONCERT_URN_PREFIX}:${APP_NAME}:${COMPONENT_NAME}:build:${BUILD_NUMBER}",
  "version": 1,
  "metadata": {
    "timestamp": "${TIMESTAMP_UTC}",
    "component": {
      "type": "build",
      "name": "${APP_NAME}",
      "version": "${APP_VERSION}"
    },
    "properties": [
      {
        "name": "build-number",
        "value": "${BUILD_NUMBER}"
      }
    ]
  },
  "components": [
    {
      "bom-ref": "img:${COMPONENT_NAME}",
      "type": "container",
      "name": "${COMPONENT_NAME}",
      "purl": "${IMAGE_PURL}",
      "properties": [
        {
          "name": "uri",
          "value": "${IMAGE_URI}"
        },
        {
          "name": "tag",
          "value": "${IMAGE_TAG}"
        },
        {
          "name": "digest",
          "value": "${IMAGE_DIGEST}"
        }
      ]
    },
    {
      "bom-ref": "repository:coderepo:github:${CODE_REPO_NAME}",
      "type": "code",
      "name": "${REPO_NAME}",
      "purl": "${REPO_URL}",
      "properties": [
        {
          "name": "commit_sha",
          "value": "${COMMIT_SHA}"
        },
        {
          "name": "branch",
          "value": "${REPO_BRANCH}"
        }
      ]
    }
  ]
}